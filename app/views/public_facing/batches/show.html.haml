= render "public_facing/batches/header"

.container
  - if @batch.description
    %p
      = @batch.description
  %p
    %b color
    = @batch.color
  %p
    %b difficulty
    = @batch.difficulty

  %table.table
    %tr
      %th
      %th.text-right Volume
      %th.text-right ABV
      %th.text-right OG
      %th.text-right FG
    %tr
      %td Projectioned
      %td.text-right= pluralize(@batch.projected_volume_in_gallons, "gallon")
      %td.text-right= number_to_percentage(@batch.projected_alcohol_by_volume, :precision => 2)
      %td.text-right= @batch.projected_original_gravity
      %td.text-right= @batch.projected_final_gravity
    %tr
      %td Actual
      %td.text-right= pluralize(@batch.actual_volume_in_gallons, "gallon")
      %td.text-right= number_to_percentage(@batch.actual_alcohol_by_volume, :precision => 2)
      %td.text-right= @batch.actual_original_gravity
      %td.text-right= @batch.actual_final_gravity