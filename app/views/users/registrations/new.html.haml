.container
  .row
    .col-sm-4.col-sm-offset-4
      #user_signup_wrapper
        %h2 Sign up
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            .form-group
              = f.input :name, required: true, autofocus: true, :input_html => { :class => "form-control floatlabel" }, :placeholder => "Your Name", :label => false
            .form-group
              = f.input :email, required: true, autofocus: true, :input_html => { :class => "form-control floatlabel" }, :label => false, :placeholder => "Email"
            .form-group
              = f.input :password, required: true, :input_html => { :class => "form-control floatlabel" }, :label => false, :placeholder => "Password"
            .form-group
              = f.input :password_confirmation, required: true, :input_html => { :class => "form-control floatlabel" }, :label => false, :placeholder => "Password Confirmation"
          .form-actions
            .row
              .col-sm-8.col-sm-offset-2
                = f.button :submit, "Sign up", :class => "btn btn-primary btn-block btn-lg"
        .text-center
          = render "users/shared/links"
