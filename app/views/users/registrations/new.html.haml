.container
  .row
    .col-sm-4.col-sm-offset-4
      #user_signup_wrapper
        %h2 Sign up
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            .form-group
              = f.input :email, required: true, autofocus: true, :input_html => { :class => "form-control" }
            .form-group
              = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), :input_html => { :class => "form-control" }
            .form-group
              = f.input :password_confirmation, required: true, :input_html => { :class => "form-control" }
          .form-actions
            = f.button :submit, "Sign up", :class => "btn btn-primary"
        = render "users/shared/links"
