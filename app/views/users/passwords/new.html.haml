.container
  .row
    .col-sm-4.col-sm-offset-4
      #user_password_reset_wrapper
        %h2 Forgot your password?
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, :input_html => { :class => "form-control floatlabel" }, required: true, :label => false, autofocus: true, :placeholder => "Email"
          .form-actions
            = f.button :submit, "Reset Password via Email", :class => "btn btn-primary"
        = render "users/shared/links"
