.container
  %h1 Listing batches

  %table.table
    %thead
      %tr
        %th Name
        %th Brew date
        %th
        %th
        
    %tbody
      - @batches.each do |batch|
        %tr
          %td= batch.name
          %td= batch.actual_brew_date
          %td.text-right
            = link_to 'Show', batch, :class => "btn btn-default btn-sm"
            = link_to 'Edit', edit_batch_path(batch), :class => "btn btn-default btn-sm"

  %br

  = link_to 'New Batch', new_batch_path, :class => "btn btn-primary"
