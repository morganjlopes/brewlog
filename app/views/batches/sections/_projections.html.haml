%section#projections
  .section_header_wrapper
    %h3
      Projections
  .section_body_wrapper
    .row
      .col-sm-3
        .form-group
          = f.input :difficulty, collection: Batch.difficulty_options, :label_method => :last, :value_method => :first, :include_blank => false, :input_html => { :class => "form-control"}, :label => "Brew Difficulty"
      .col-sm-3
        .form-group
          = f.label :projected_alcohol_by_volume, "Projected ABV"
          .input-group
            = f.input :projected_alcohol_by_volume, :input_html => { :class => "form-control" }, :label => false
            .input-group-addon %
      .col-sm-2
        .form-group
          = f.input :projected_international_bittering_units, :input_html => { :class => "form-control" }, :label => "Projected  IBU"
      .col-sm-2
        .form-group
          = f.input :projected_original_gravity, :input_html => { :class => "form-control" }, :label => "Projected  OG"
      .col-sm-2
        .form-group
          = f.input :projected_final_gravity, :input_html => { :class => "form-control" }, :label => "Projected  FG"
    .form-group
      = f.label :projected_secondary_transition_date, "Projected Secondary Date"
      .input-group
        .input-group-addon
          .fa.fa-calendar
        = f.date_field :projected_secondary_transition_date, :class => "form-control", :label => false
    .form-group
      = f.label :projected_bottle_date, "Projected Bottle Date"
      .input-group
        .input-group-addon
          .fa.fa-calendar
        = f.date_field :projected_bottle_date, :class => "form-control", :label => false
    .form-group
      = f.label :projected_condition_date, "Projected Condition Date"
      .input-group
        .input-group-addon
          .fa.fa-calendar
        = f.date_field :projected_condition_date, :class => "form-control", :label => false