= simple_form_for([@brewery, @batch]) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :name, :input_html => { :class => "form-control"}
    .form-group
      = f.input :difficulty, collection: Batch.difficulty_options, :label_method => :last, :value_method => :first, :include_blank => false, :input_html => { :class => "form-control"}
    .row
      .col-sm-3
        .form-group
          = f.input :projected_original_gravity, :input_html => { :class => "form-control" }, :label => "Projected  OG"
      .col-sm-3
        .form-group
          = f.input :projected_final_gravity, :input_html => { :class => "form-control" }, :label => "Projected  FG"
      .col-sm-3
        .form-group
          = f.label :projected_alcohol_by_volume, "ABV Estimate"
          .input-group
            = f.input :projected_alcohol_by_volume, :input_html => { :class => "form-control" }, :label => false
            .input-group-addon %
    .row
      .col-md-3
        %h3
          Timeline
        .form-group
          = f.label :actual_brew_date, :label => "Brew Date", :input_html => { :class => ""}
          %br
          = f.date_field :actual_brew_date, :class => "form-control", :label => false
        .form-group
          = f.label :projected_secondary_transition_date, "Projected Secondary Date"
          %br
          = f.date_field :projected_secondary_transition_date, :class => "form-control", :label => false
        .form-group
          = f.label :projected_bottle_date, "Projected Bottle Date"
          %br
          = f.date_field :projected_bottle_date, :class => "form-control", :label => false
        .form-group
          = f.label :projected_condition_date, "Projected Condition Date"
          %br
          = f.date_field :projected_condition_date, :class => "form-control", :label => false
      .col-md-3
        %h3
          Brew Day
        .form-group
          = f.label :projected_volume_in_gallons, "Volume Estimate"
          .input-group
            = f.input :projected_volume_in_gallons, :input_html => { :class => "form-control" }, :label => false
            .input-group-addon
              gal
        .form-group
          = f.input :actual_original_gravity, :input_html => { :class => "form-control" }, :label => "OG"
      .col-md-3
        %h3
          Bottle Day
        .form-group
          = f.label :actual_bottle_date, "Bottle Date"
          %br
          = f.date_field :actual_bottle_date, :class => "form-control", :label => false
        .form-group
          = f.label :actual_volume_in_gallons, "Volume"
          .input-group
            = f.input :actual_volume_in_gallons, :input_html => { :class => "form-control" }, :label => false
            .input-group-addon
              gal
        .form-group
          = f.input :actual_final_gravity, :input_html => { :class => "form-control" }, :label => "FG"
      .col-md-3
        %h3
          Condition Day
        .form-group
          = f.label :actual_condition_date, "Condition Date"
          %br
          = f.date_field :actual_condition_date, :class => "form-control", :label => false

  .form-actions
    = f.button :submit, :class => "btn btn-primary"
