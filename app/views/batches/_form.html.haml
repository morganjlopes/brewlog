= simple_form_for(@batch) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :name, :input_html => { :class => "form-control"}
    .form-group
      = f.label :actual_brew_date, :label => "Brew Date", :input_html => { :class => ""}
      = f.input :actual_brew_date, :input_html => { :class => ""}, :label => false
    .form-group
      = f.input :difficulty, collection: Batch.difficulty_options, :label_method => :last, :value_method => :first, :include_blank => false, :input_html => { :class => "form-control"}
    - if @batch.id.present?
      .form-group
        = f.input :description, :input_html => { :class => "form-control"}
      .form-group
        = f.input :target_volume_in_gallons, :input_html => { :class => "form-control"}
      .form-group
        = f.input :actual_volume_in_gallons, :input_html => { :class => "form-control"}
      .form-group
        = f.input :original_gravity, :input_html => { :class => "form-control"}
      .form-group
        = f.input :final_gravity, :input_html => { :class => "form-control"}
      .form-group
        = f.input :alcohol_by_volume, :input_html => { :class => "form-control"}
      .form-group
        = f.input :color, :input_html => { :class => "form-control"}
      .form-group
        = f.input :secondary_transition_date, :input_html => { :class => ""}
      .form-group
        = f.input :bottle_date, :input_html => { :class => ""}
      .form-group
        = f.input :condition_date, :input_html => { :class => ""}

  .form-actions
    = f.button :submit, :class => "btn btn-primary"
