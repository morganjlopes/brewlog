= simple_form_for(@brewery) do |f|
  = f.error_notification

  .form-inputs
    .form-group
    = f.input :name, :input_html => { :class => "form-control floatlabel" }, :placeholder => "Brewery Name", :label => false
    - if @brewery.id
      .form-group
      = f.input :slogan, :input_html => { :class => "form-control floatlabel" }, :placeholder => "Brewery Slogan", :label => false

  .form-actions
    .row
      .col-sm-8.col-sm-offset-2
        = f.button :submit, :class => "btn btn-primary btn-block btn-lg"
