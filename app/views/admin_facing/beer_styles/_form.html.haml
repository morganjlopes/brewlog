= simple_form_for(@beer_style) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :name, :input_html => { :class => "form-control floatlabel"}, :placeholder => "Style Name", :label => false
    .form-group
      = f.input :description, :input_html => { :class => "form-control autosize"}
    .form-group
      = f.input :alternative_names, :input_html => { :class => "form-control floatlabel"}, :placeholder => "Alternative Names", :label => false
    .form-group
      = f.input :examples, :input_html => { :class => "form-control floatlabel"}, :placeholder => "Examples", :label => false

  .form-actions
    = f.submit "Submit", :class => "btn btn-primary btn-block"
