!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title BrewLog
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    -if notice
      %p#notice= notice

    .container
      / Button trigger modal
      .btn.btn-primary.btn-lg{"data-target" => "#newBatchModal", "data-toggle" => "modal", :type => "button"}
        +
    = yield

    / Modal
    #newBatchModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "newBatchModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-sm
        .modal-content
          = simple_form_for(Batch.new) do |f|
            .modal-header
              %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                %span{"aria-hidden" => "true"} &times;
              %h4#newBatchModalLabel.modal-title
                New Batch
            .modal-body
              = f.error_notification
              .form-inputs
                .form-group
                  = f.input :name, :input_html => { :class => "form-control"}
                .form-group
                  = f.label :actual_brew_date, :label => "Brew Date", :input_html => { :class => ""}
                  = f.input :actual_brew_date, :input_html => { :class => ""}, :label => false
                .form-group
                  = f.input :difficulty, collection: Batch.difficulty_options, :label_method => :last, :value_method => :first, :include_blank => false, :input_html => { :class => "form-control"}

            .modal-footer
              .form-actions
                = f.button :submit, :class => "btn btn-primary btn-lg btn-block"