!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    = favicon_link_tag 'icon.png'

    - set_meta_tags :site => 'All HomeBrew', :title => "#{@page_title}", :reverse => true
    - set_meta_tags :description => "#{@page_description}"
    - set_meta_tags :canonical => "#{request.original_url}"
    - set_meta_tags :author => "#{request.original_url}"
    / Open Graph Data
    - set_meta_tags :og => {:title => "#{@page_title}", :type => '', :url => "#{request.original_url}", :image => "#{@page_image}", :canonical => "#{request.original_url}", :author => "#{request.original_url}"}
    = display_meta_tags

  %body{ "data-spy" => "scroll", "data-target" => "#spy-nav"}

    = render "layouts/navigation"

    -if notice
      #notice.alert.alert-success
        .container
          = notice
    -if alert
      #alert.alert.alert-danger
        .container
          = alert

    = yield

    - if @brewery.present? and @brewery.id
      =render "public_facing/batches/new_modal"

    =render "public_facing/recipes/new_modal"

    =render "layouts/footer"

    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}/

    = yield(:page_script)